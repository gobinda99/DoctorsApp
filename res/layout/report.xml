<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <include android:id="@+id/cell1" layout="@layout/headernfooter1" /> 
   
	<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Patient Report"
        android:textSize="24dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#FFFFFF" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/textView2"
          android:layout_marginTop="260dp"
          android:text="Blood Group:"
          android:textSize="16dp"
          android:textStyle="bold"
          android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginTop="180dp"
        android:text="Pulse :"
        android:textSize="16dp"
        android:textStyle="bold" 
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginTop="220dp"
        android:text="Temperature :"
        android:textSize="16dp"
        android:textStyle="bold" 
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="Patient Name :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginTop="140dp"
        android:text="BP :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView6ReportPatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:paddingLeft="6dp"
        android:text=" "
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />
    
    <EditText
        android:id="@+id/editText1ReportBp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2ReportPulse"
        android:layout_alignLeft="@+id/textView6ReportPatName"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@+id/textView6"
        android:ems="5"
        android:hint="Max"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#898989"
        android:textStyle="bold" >
      
    </EditText>
    
	  <EditText
	      android:id="@+id/editText2ReportPulse"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:layout_alignLeft="@+id/textView6ReportPatName"
	      android:layout_alignTop="@+id/textView5"
	      android:layout_marginLeft="6dp"
	     
	      
	      android:textStyle="bold"
	      android:inputType="number"
	      android:hint="BPM"
	      android:textColor="#898989" 
	      android:singleLine="true">
     
    </EditText>
    
	  	  <EditText
	  	      android:id="@+id/editText3ReportTemperature"
	  	      android:layout_width="fill_parent"
	  	      android:layout_height="wrap_content"
	  	      android:layout_alignLeft="@+id/textView6ReportPatName"
	  	      android:layout_alignTop="@+id/textView4"
	  	      android:layout_marginLeft="6dp"
	  	      
	  	      android:textStyle="bold"
	  	      android:hint="Degree Celcius"
	  	      android:inputType="number"
	  	      android:textColor="#898989"
	  	      android:singleLine="true"
	  	       >
     
    </EditText>
    
	  	   	  <EditText
	  	   	      android:id="@+id/editText6ReportBloodGroup"
	  	   	      android:layout_width="fill_parent"
	  	   	      android:layout_height="wrap_content"
	  	   	      android:layout_alignLeft="@+id/textView6ReportPatName"
	  	   	      android:layout_alignTop="@+id/textView7"
	  	   	      android:layout_marginLeft="6dp"
	  	   	      
	  	   	      
	  	   	      android:textStyle="bold"
	  	   	      android:hint="Group Factor"
	  	   	      android:inputType="text"
	  	   	      android:textColor="#898989" 
	  	   	      android:singleLine="true">
     
    </EditText>

	  	   	  <TextView
	  	   	      android:id="@+id/textView8"
	  	   	      android:layout_width="fill_parent"
	  	   	      android:layout_height="wrap_content"
	  	   	      android:layout_alignParentLeft="true"
	  	   	      android:layout_below="@+id/editText6ReportBloodGroup"
	  	   	      android:text="              Remark :"
	  	   	      android:textSize="16dp"
	  	   	      android:textStyle="bold"
	  	   	      android:textColor="#FFFFFF" />

	  	   	  <EditText
	  	   	      android:id="@+id/editText5ReportRemark"
	  	   	      android:layout_width="fill_parent"
	  	   	      android:layout_height="80dp"
	  	   	      android:layout_alignLeft="@+id/editText6ReportBloodGroup"
	  	   	      android:layout_alignTop="@+id/textView8"
	  	   	      
	  	   	      
	  	   	      android:textStyle="bold"
	  	   	      android:inputType="textShortMessage"
	  	   	      android:hint="Short Message"
	  	   	      android:textColor="#898989" />

	  	   	  <EditText
	  	   	      android:id="@+id/editText1ReportBpMin"
	  	   	      android:layout_width="wrap_content"
	  	   	      android:layout_height="wrap_content"
	  	   	      android:layout_alignBottom="@+id/editText1ReportBp"
	  	   	      android:layout_alignTop="@+id/editText1ReportBp"
	  	   	      android:layout_toRightOf="@+id/textView6"
	  	   	      android:ems="10"
	  	   	      android:hint="Min"
	  	   	      android:inputType="number"
	  	   	      android:textStyle="bold"
	  	   	      android:textColor="#898989" >

	  	   	      <requestFocus />
	  	   	  </EditText>

	  	   	  <TextView
	  	   	      android:id="@+id/textView6"
	  	   	      android:layout_width="wrap_content"
	  	   	      android:layout_height="wrap_content"
	  	   	      android:layout_alignBaseline="@+id/editText1ReportBpMin"
	  	   	      android:layout_alignBottom="@+id/editText1"
	  	   	      android:layout_alignRight="@+id/textView1"
	  	   	      android:layout_marginRight="17dp"
	  	   	      android:text=" /"
	  	   	      android:textSize="35dp"
	  	   	      android:textAppearance="?android:attr/textAppearanceLarge"
	  	   	      android:textColor="#ffffff" />
	  	  
</RelativeLayout>